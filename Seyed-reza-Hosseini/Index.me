<!doctype html>
<html lang="fa">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Akasi Khayyam — Restore</title>
  <link href="https://fonts.googleapis.com/css2?family=Amiri:wght@700&family=Noto+Nastaliq+Urdu:wght@400;700&display=swap" rel="stylesheet">
  <style>
    /* minimal reset */
    *,*::before,*::after{box-sizing:border-box;margin:0;padding:0}
    html,body{height:100%}

    /* page background (simple, ensure it loads) */
    body{
      font-family: system-ui, "Noto Nastaliq Urdu", sans-serif;
      text-align:center;              /* keep text centered */
      margin:0;
      padding:2.5rem;
      background-color:#fafafa;
      background-image:
        linear-gradient(135deg, rgba(227,242,253,0.18), rgba(250,250,250,0.18)),
        url("Assets/Background-atmosphere.jpg");
      background-repeat:no-repeat;
      background-position:center;
      background-size:cover;
      -webkit-font-smoothing:antialiased;
      -moz-osx-font-smoothing:grayscale;
      overflow-y:auto;                /* allow natural scrolling */
    }

    /* content sits above decorative images */
    .content{
      position:relative;
      z-index:2000;                   /* ensure visibility above brand image */
      max-width:720px;
      margin:0 auto;
      direction:rtl;
      padding-top:1.5rem;
      padding-bottom:4.5rem;          /* safe space under links */
    }

    h1{ font-family:'Amiri',serif; font-weight:800; font-size:clamp(2rem,4.2vw,3.8rem); color:#222; margin-bottom:1rem}

    ul{ list-style:none; margin-top:.6rem }
    li{ margin: .9rem 0 }
    a{
      display:inline-block;
      text-decoration:none;
      color:#0366d6;
      background:rgba(255,255,255,0.7);
      padding:.36rem .6rem;
      border-radius:6px;
      font-size:clamp(.95rem,1.6vw,1.15rem);
      font-family:'Noto Nastaliq Urdu',sans-serif;
    }

    /* centered decorative brand image — small and restrained */
    .brand-logo{
      display: block;
      margin: 4rem auto 0 auto;  /* push it down after text */
      width: 30vw;
      max-width: 200px;
      height: auto;
      object-fit: cover;
      opacity: 0.98;
      /* display: fixed;
      left:50%;
      top:75vh;                          
      transform:translate(-50%);
      width:30vw;                       
      max-width:200px;                 
      max-height:30vh;                  
      object-fit:cover;
      height:auto;
      z-index:1000;                     
      pointer-events:none;
      opacity:.98; */
    }

    /* bottom-right logo */
    .bottom-logo{
      position:fixed;
      right:1rem;
      bottom:1rem;
      width:18vw;
      max-width:120px;
      height:auto;
      z-index:2200;
      pointer-events:none;
    }

    /* small-screen tweaks */
    @media (max-width:520px){
      .brand-logo{ width:48vw; max-width:160px; height:auto; margin:1.5rem auto 0 auto; } /* still centered */
      .bottom-logo{ display:block; width:22vw; max-width:100px }
      body{ padding:1rem }
      .content{ padding-bottom: calc( var(--safe,4.5rem) ) }
    }
  </style>
</head>
<body>
  <div class="content">
    <h1>عکاسی خیام</h1>
    <ul>
      <li><a href="https://wa.me/+989159207660" target="_blank" rel="noopener">WhatsApp - تماس داخل واتساپ</a></li>
      <a>عکاسی خیام</a>
    </ul>
     
  </div>

  <!-- fixed images (decorative) -->
 
  <img src="Assets/Akasi-Khayyam-logo.png" alt="Akasi Khayyam small logo" class="bottom-logo" />
</body>
